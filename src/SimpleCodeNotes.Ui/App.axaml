        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseDark.xaml" />-->
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Styles/Colors.axaml" />
