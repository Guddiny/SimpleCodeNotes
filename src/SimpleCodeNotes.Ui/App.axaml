<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SimpleCodeNotes.Ui.App">
	<Application.Styles>
		<FluentTheme Mode="Dark"/>
		<Style Selector="MenuItem /template/ Popup#PART_Popup > Border">
			<Setter Property="Border.Background" Value="Red"></Setter>
		</Style>
		<StyleInclude Source="avares://AvaloniaEdit/AvaloniaEdit.xaml" />
		<!--<StyleInclude Source="avares://Avalonia.Themes.Fluent/DensityStyles/Compact.xaml" />-->
	</Application.Styles>

	<Application.Resources>
		<ResourceDictionary>
			<SolidColorBrush x:Key="DarkGray">#212224</SolidColorBrush>
			<SolidColorBrush x:Key="Gray">#2c2c2c</SolidColorBrush>
			<SolidColorBrush x:Key="LightGray">#515254</SolidColorBrush>
			<SolidColorBrush x:Key="Warning">Yellow</SolidColorBrush>
			<SolidColorBrush x:Key="White">White</SolidColorBrush>
			<SolidColorBrush x:Key="MainFontColor">#e3e3e3</SolidColorBrush>
		</ResourceDictionary>
	</Application.Resources>
</Application>
