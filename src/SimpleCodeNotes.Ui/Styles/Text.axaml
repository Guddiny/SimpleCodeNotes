<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
            <TextBlock Classes="code_text">Some Text</TextBlock>
        </Border>
    </Design.PreviewWith>

    <Style Selector="TextBox.code_text">
        <Setter Property="FontFamily"
                Value="Inconsolata,Consolas,Monospace,Courier" />
    </Style>

    <Style Selector="TextBlock.code_text">
        <Setter Property="FontFamily"
                Value="Inconsolata,Consolas,Monospace,Courier" />
    </Style>

    <Style Selector="TextBox">
        <Setter Property="SelectionBrush" Value="{DynamicResource SystemAccent-1}"/>
    </Style>
</Styles>
