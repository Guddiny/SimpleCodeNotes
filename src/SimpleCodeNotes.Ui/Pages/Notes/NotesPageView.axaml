<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="SimpleCodeNotes.Ui.Pages.Notes.NotesPageView">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Pages/Notes/NotesListItemTemplate.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid ColumnDefinitions="300, Auto, *">

        <Grid
            Grid.Column="0"
            RowDefinitions="Auto, *">

            <StackPanel
                Grid.Row="0"
                Orientation="Vertical"
                Margin="5"
                Spacing="5">

                <Grid ColumnDefinitions="*, Auto">
                    <TextBox
                        x:Name="Filter"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        TextWrapping="NoWrap"/>
                    <Button
                        Grid.Column="1"
                        IsVisible="{Binding #Filter.Text, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <PathIcon
                            Data="{StaticResource backspace_regular}" />
                    </Button>
                </Grid>

                <Button
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center">
                    Add Note
                </Button>
            </StackPanel>

            <ListBox
                Grid.Row="1"
                Classes="notes_list"
                Background="Transparent"
                ItemTemplate="{StaticResource NotesListItemTemplate}"
                Items="{Binding Notes}"
                x:Name="PART_Items" />

        </Grid>

        <GridSplitter
            Grid.Column="1"
            Width="1"/>


    </Grid>
</UserControl>
